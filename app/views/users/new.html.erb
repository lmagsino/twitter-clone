<h1 align="center">Create Twitter Account</h1>

<div class='row'>
  <div class='col-12'>
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>

      <div class="form-group">
        <div class="control-label col-2">
          <%= f.label :username %>
        </div>
        <div class="col-8">
          <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-2">
          <%= f.label :name %>
        </div>
        <div class="col-8">
          <%= f.text_field :name, class: "form-control", placeholder: "Enter name", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-2">
          <%= f.label :email %>
        </div>
        <div class="col-8">
          <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-2">
          <%= f.label :password %>
        </div>
        <div class="col-8">
          <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
        </div>
      </div>

      <div class="form-group">
        <div class="offset-2 col-10">
          <%= f.submit "Sign up", class: 'btn btn-primary btn-lg' %>
        </div>
      </div>

    <% end %>

  </div>

</div>
